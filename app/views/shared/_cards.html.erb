
<!-- nuevo codigo de los nuevos componentes de kitt -->
<div class="row">
<% @gyms.each do |gym| %>
 <div class="col-lg-4 col-xs-4 col-sm-4 col-xs-6 ">
   <div class="card"
   style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path gym.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category"><%= link_to  gym.name, gym_path(gym) %></div>
        <div class="card-description">
          <h2>Cool GYMMS</h2>
          <p>Very cool stuff, useful and smart</p>
        </div>
    </div>
  </div>
<% end %>
</div>
